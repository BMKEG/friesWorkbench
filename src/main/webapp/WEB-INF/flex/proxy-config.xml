<?xml version="1.0" encoding="UTF-8"?>
<service id="proxy-service" class="flex.messaging.services.HTTPProxyService">

	<properties>
		<connection-manager>
			<max-total-connections>100</max-total-connections>
			<default-max-connections-per-host>2
			</default-max-connections-per-host>
		</connection-manager>
		<allow-lax-ssl>true</allow-lax-ssl>
	</properties>

	<adapters>
		<adapter-definition id="http-proxy"
			class="flex.messaging.services.http.HTTPProxyAdapter" default="true" />
		<adapter-definition id="soap-proxy"
			class="flex.messaging.services.http.SOAPProxyAdapter" />
	</adapters>

	<default-channels>
		<channel ref="my-secure-http" />
		<channel ref="my-http" />
	</default-channels>

	<destination id="DefaultHTTP">
		<properties>
			<dynamic-url>http://localhost:9200/kefed/*</dynamic-url>
			<dynamic-url>http://{server.name}:9200/kefed/*</dynamic-url>
			<dynamic-url>http://data.bioontology.org/*</dynamic-url>
		</properties>
		<!-- <security> -->
		<!-- <security-constraint ref="edit"/> -->
		<!-- </security> -->
	</destination>

	<destination id="DefaultHTTPS" >
		<properties>
			<dynamic-url>https://localhost:9200/kefed/*</dynamic-url>
			<dynamic-url>https://{server.name}:9200/kefed/*</dynamic-url>
			<dynamic-url>http://data.bioontology.org/*</dynamic-url>
		</properties>
	</destination>

</service>
